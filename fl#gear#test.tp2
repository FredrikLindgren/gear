BACKUP "fl#gear#test/backup"
AUTHOR Wisp

ALWAYS
  INCLUDE ~fl#gear.tpa~
  INCLUDE ~%MOD_FOLDER%/lib.tpa~

  // Environment that should be refactored away
  OUTER_SPRINT fl#gear#dir "."
  OUTER_SET BG1 = 0
  OUTER_SET Tutu = 0
  OUTER_SET BGT = 0
END

